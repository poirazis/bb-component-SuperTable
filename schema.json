{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "bb-component-SuperTable",
    "friendlyName": "Super Table",
    "description": "A Fully Customizable Table Component with Superpowers !",
    "icon": "Table",
    "showEmptyState": false,
    "requiredAncestors": ["dataprovider"],
    "styles": ["padding", "size", "background", "border", "shadow"],
    "hasChildren": true,
    "settings": [
      {
        "type": "dataProvider",
        "key": "dataProvider",
        "label": "Data Provider",
        "required": true
      },
      {
        "type": "field",
        "key": "idColumn",
        "label": "ID Column",
        "defaultValue": "_id",
        "required": true
      },
      {
        "type": "select",
        "key": "size",
        "label": "Size",
        "options": [
          { "label": "Extra Small", "value": "XS" },
          { "label": "Small", "value": "S" },
          { "label": "Medium", "value": "M" },
          { "label": "Large", "value": "L" },
          { "label": "Extra Large", "value": "XL" },
          { "label": "Custom", "value": "custom" }
        ],
        "defaultValue": "M"
      },
      {
        "section": true,
        "name": "Custom Sizing Settings",
        "dependsOn": { "setting": "size", "value": "custom" },
        "settings": [
          {
            "type": "number",
            "key": "rowHeight",
            "label": "Row Height",
            "min": 0,
            "max": 400,
            "defaultValue": 55
          },
          {
            "type": "number",
            "key": "cellPadding",
            "label": "Cell Padding L/R",
            "min": 0,
            "max": 32,
            "defaultValue": 16
          },
          {
            "type": "number",
            "key": "rowFontSize",
            "label": "Row Font Size",
            "min": 6,
            "defaultValue": 14
          }
        ]
      },
      {
        "type": "number",
        "key": "visibleRowCount",
        "label": "Visible Rows",
        "defaultValue": 8,
        "min": 1
      },
      {
        "type": "columns",
        "key": "columnList",
        "label": "Classic Columns",
        "nested": "true"
      },
      {
        "type": "select",
        "key": "columnSizing",
        "label": "Column Sizing",
        "options" : [ 
          { "label" : "Responsive", "value": "flex" }, 
          { "label" : "Fixed", "value": "fixed"} 
         ],
        "defaultValue": "flex"
      },
      {
        "type": "select",
        "key": "columnMaxWidth",
        "label": "Max Width",
        "dependsOn": { "setting" : "columnSizing", "value" : "flex" },
        "options" : [ 
          { "label" : "Small", "value": "4rem" }, 
          { "label" : "Normal", "value": "8rem" }, 
          { "label" : "Large", "value": "16rem"}, 
          { "label" : "Extra Large", "value": "32rem"} 
         ],
        "defaultValue": "16rem"
      },
      {
        "type": "select",
        "key": "columnWidth",
        "label": "Column Width",
        "dependsOn": { "setting" : "columnSizing", "value" : "fixed" },
        "options" : [ 
          { "label" : "Small", "value": "4rem" }, 
          { "label" : "Normal", "value": "8rem" }, 
          { "label" : "Large", "value": "12rem"} 
         ],
        "defaultValue": "8rem"
      },
      {
        "type": "select",
        "key": "superColumnsPos",
        "label": "Super Columns",
        "showInBar": true,
        "barStyle": "buttons",
        "options": [
          {
            "label": "First",
            "value": "first",
            "barIcon": "PaddingLeft",
            "barTitle": "Super Columns First"
          },
          {
            "label": "Last",
            "value": "last",
            "barIcon": "PaddingRight",
            "barTitle": "Super Columns Last"
          }
        ],
        "defaultValue": "first"
      },
      {
        "type": "boolean",
        "key": "editable",
        "label": "Editable",
        "defaultValue": false,
        "showInBar": true,
        "barStyle": "buttons",
        "barIcon": "Edit",
        "barTitle": "Editable"
      },
      {
        "type": "boolean",
        "key": "filtering",
        "label": "Filtering",
        "defaultValue": true,
        "showInBar": true,
        "barStyle": "buttons",
        "barIcon": "FilterAdd",
        "barTitle": "Filterable"
      },
      {
        "type": "select",
        "key": "filteringMode",
        "label": "Filtering Mode",
        "barStyle": "buttons",
        "options": [
          { "label": "Live Debounced", "value": "debounced" },
          { "label": "On Enter", "value": "onentert" }
        ],
        "defaultValue": "debounced",
        "dependsOn": "filtering"
      },
      {
        "type": "boolean",
        "key": "sorting",
        "label": "Sorting",
        "defaultValue": true,
        "showInBar": true,
        "barStyle": "buttons",
        "barIcon": "SortOrderDown",
        "barTitle": "Sortable"
      },
      {
        "type": "boolean",
        "key": "rowSelection",
        "label": "Row Selection",
        "defaultValue": false,
        "showInBar": true,
        "barStyle": "buttons",
        "barIcon": "SelectBox",
        "barTitle": "Sortable"
      },
      {
        "type": "boolean",
        "key": "showFooter",
        "label": "Column Footers",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "key": "autoRefresh",
        "label": "Auto Refresh",
        "defaultValue": false
      },
      {
        "type": "number",
        "key": "autoRefreshRate",
        "label": "Refresh Every",
        "min" : 20,
        "defaultValue": 60,
        "dependsOn": "autoRefresh"
      },
      {
        "type": "boolean",
        "key": "customize",
        "label": "Customize",
        "defaultValue": false
      },
      {
        "section": true,
        "name": "Default Header Settings",
        "dependsOn": "customize",
        "settings": [
          {
            "type": "select",
            "label": "Header Align",
            "key": "headerAlign",
            "showInBar": false,
            "barStyle": "buttons",
            "options": [
              {
                "label": "Left",
                "value": "left",
                "barIcon": "TextAlignLeft",
                "barTitle": "Text Align Left"
              },
              {
                "label": "Center",
                "value": "center",
                "barIcon": "TextAlignCenter",
                "barTitle": "Row layout"
              },
              {
                "label": "Right",
                "value": "right",
                "barIcon": "TextAlignRight",
                "barTitle": "Row layout"
              }
            ],
            "defaultValue": "left"
          },
          {
            "type": "color",
            "key": "headerFontColor",
            "label": "Text Color"
          },
          {
            "type": "color",
            "key": "headerBackground",
            "label": "Background Color"
          }
        ]
      },
      {
        "section": true,
        "name": "Default Row Settings",
        "dependsOn": "customize",
        "settings": [
          {
            "type": "select",
            "label": "Contents Horizontal Align",
            "key": "rowHorizontalAlign",
            "showInBar": false,
            "barStyle": "buttons",
            "options": [
              {
                "label": "Left",
                "value": "flex-start",
                "barIcon": "AlignLeft",
                "barTitle": "Align left"
              },
              {
                "label": "Center",
                "value": "center",
                "barIcon": "AlignCenter",
                "barTitle": "Align center"
              },
              {
                "label": "Right",
                "value": "flex-end",
                "barIcon": "AlignRight",
                "barTitle": "Align right"
              },
              {
                "label": "Stretch",
                "value": "stretch",
                "barIcon": "MoveLeftRight",
                "barTitle": "Align stretched horizontally"
              }
            ],
            "defaultValue": "flex-start"
          },
          {
            "type": "select",
            "label": "Contents Vertical Align",
            "key": "rowVerticalAlign",
            "showInBar": false,
            "barStyle": "buttons",
            "options": [
              {
                "label": "Top",
                "value": "flex-start",
                "barIcon": "AlignTop",
                "barTitle": "Align top"
              },
              {
                "label": "Middle",
                "value": "center",
                "barIcon": "AlignMiddle",
                "barTitle": "Align middle"
              },
              {
                "label": "Bottom",
                "value": "flex-end",
                "barIcon": "AlignBottom",
                "barTitle": "Align bottom"
              },
              {
                "label": "Stretch",
                "value": "stretch",
                "barIcon": "MoveUpDown",
                "barTitle": "Align stretched vertically"
              }
            ],
            "defaultValue": "flex-start"
          },
          {
            "type": "color",
            "key": "rowFontColor",
            "label": "Text Color"
          },
          {
            "type": "color",
            "key": "rowBackground",
            "label": "Background Color"
          }
        ]
      },
      {
        "section": true,
        "name": "Default Footer Settings",
        "dependsOn": "customize",
        "settings": [
          {
            "type": "select",
            "label": "Footer Align",
            "key": "footerAlign",
            "showInBar": false,
            "barStyle": "buttons",
            "options": [
              {
                "label": "Left",
                "value": "flex-start",
                "barIcon": "TextAlignLeft",
                "barTitle": "Text Align Left"
              },
              {
                "label": "Center",
                "value": "center",
                "barIcon": "TextAlignCenter",
                "barTitle": "Row layout"
              },
              {
                "label": "Right",
                "value": "flex-end",
                "barIcon": "TextAlignRight",
                "barTitle": "Row layout"
              }
            ],
            "defaultValue": "flex-start"
          },
          {
            "type": "color",
            "key": "footerFontColor",
            "label": "Text Color"
          },
          {
            "type": "color",
            "key": "footerBackground",
            "label": "Background Color"
          }
        ]
      },
      {
        "section": true,
        "name": "Dividers Settings",
        "dependsOn": "customize",
        "settings": [
          {
            "type": "select",
            "key": "dividers",
            "label": "Dividers",
            "options": [
              { "label": "None", "value": "none" },
              { "label": "Horizontal", "value": "horizontal" },
              { "label": "Vertical", "value": "vertical" },
              { "label": "Both", "value": "both" }
            ],
            "defaultValue": "horizontal"
          },
          {
            "type": "color",
            "key": "dividersColor",
            "label": "Dividers Color"
          },
          {
            "type": "number",
            "key": "debounce",
            "label": "Debounce",
            "min": 100,
            "defaultValue": 500,
            "dependsOn": { "setting" : "filteringMode", "value" : "debounced" },
            "info": "Debounce Delay (ms)"
          }
        ]
      },
      {
        "section": true,
        "name": "On Cell Click",
        "settings": [
          {
            "label": "On Click",
            "labelHidden": false,
            "type": "select",
            "key": "clickBehaviour",
            "sendEvents": true,
            "defaultValue": "actions",
            "options": [
              {
                "label": "Run actions",
                "value": "actions"
              },
              {
                "label": "Edit Cell",
                "value": "edit"
              },
              {
                "label": "Highlight Row",
                "value": "highlight"
              },
              {
                "label": "Select Row",
                "value": "select"
              }
            ]
          },
          {
            "type": "event",
            "key": "onClick",
            "dependsOn": { "setting": "clickBehaviour", "value": "actions" },
            "context": [
              {
                "label": "Triggered By",
                "key": "rowID"
              },
              {
                "label": "Selected Rows",
                "key": "selectedRows",
                "type": "array"
              }
            ]
          },
          {
            "label": "On Double Click",
            "labelHidden": false,
            "type": "select",
            "key": "doubleClickBehaviour",
            "sendEvents": true,
            "defaultValue": "actions",
            "options": [
              {
                "label": "Run actions",
                "value": "actions"
              },
              {
                "label": "Edit Cell",
                "value": "edit"
              },
              {
                "label": "Highlight Row",
                "value": "highlight"
              },
              {
                "label": "Select Row",
                "value": "select"
              }
            ]
          },
          {
            "type": "event",
            "key": "onDoubleClick",
            "dependsOn": {
              "setting": "doubleClickBehaviour",
              "value": "actions"
            },
            "context": [
              {
                "label": "Triggered By",
                "key": "rowID"
              },
              {
                "label": "Selected Rows",
                "key": "selectedRows",
                "type": "array"
              }
            ]
          }
        ]
      },
      {
        "section": true,
        "name": "On Data Change",
        "settings": [
          {
            "type": "event",
            "key": "onDataChange",
            "context": [
              {
                "label": "Triggered By",
                "key": "rowID"
              },
              {
                "label": "Data Changes",
                "key": "dataChanges",
                "type": "array"
              }
            ]
          }
        ]
      },
      {
        "section": true,
        "name": "On Row Click",
        "settings": [
          {
            "type": "event",
            "key": "onRowClick",
            "context": [
              {
                "label": "Row ID",
                "key": "rowID"
              }
            ]
          }
        ]
      }
    ]
  }
}
