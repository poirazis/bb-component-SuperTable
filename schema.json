{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "bb-component-SuperTable",
    "friendlyName": "Super Table",
    "description": "A Fully Customizable Columnar Table Component",
    "icon": "Table",
    "hasChildren": true,
    "actions": [
      { "type": "RefreshDatasource" },
      { "type": "ClearRowSelection" }
    ],
    "showEmptyState": false,
    "styles": ["size"],
    "size": {
      "width": 600,
      "height": 400
    },
    "grid": {
      "hAlign": "stretch",
      "vAlign": "stretch"
    },
    "context": {
      "type": "static",
      "values": [
        {
          "label": "Current Row",
          "key": "row",
          "type": "object"
        },
        {
          "label": "Hovered Row",
          "key": "hoveredRow",
          "type": "object"
        },
        {
          "label": "Rows",
          "key": "rows",
          "type": "array"
        },
        {
          "label": "Selected Rows",
          "key": "selectedRows",
          "type": "array"
        },
        {
          "label": "Selected IDs",
          "key": "selectedIds",
          "type": "array"
        },
        {
          "label": "Extra Info",
          "key": "info",
          "type": "string"
        },
        {
          "label": "Rows Length",
          "key": "rowsLength",
          "type": "number"
        },
        {
          "label": "Schema",
          "key": "schema",
          "type": "object"
        },
        {
          "label": "Page Number",
          "key": "pageNumber",
          "type": "number"
        },
        {
          "label": "Singular Name",
          "key": "entitySingular",
          "type": "string"
        },
        {
          "label": "Plural Name",
          "key": "entityPlural",
          "type": "string"
        }
      ]
    },
    "settings": [
      {
        "type": "dataSource",
        "key": "datasource",
        "label": "Data Source",
        "required": true
      },
      {
        "type": "columns",
        "key": "columnList",
        "resetOn": "datasource",
        "label": "Columns",
        "nested": "true"
      },
      {
        "type": "boolean",
        "key": "isTable",
        "label": "Is Table",
        "resetOn": "datasource",
        "hidden": true
      },
      {
        "type": "field/sortable",
        "key": "sortColumn",
        "label": "Sort By",
        "resetOn": "datasource"
      },
      {
        "type": "select",
        "key": "sortOrder",
        "label": "Sort Order",
        "options": [
          { "label": "Ascending", "value": "ascending" },
          { "label": "Descending", "value": "descending" }
        ]
      },
      {
        "type": "filter",
        "key": "filter",
        "label": "Filter"
      },
      {
        "type": "number",
        "label": "Limit",
        "key": "limit",
        "defaultValue": 15
      },
      {
        "type": "boolean",
        "key": "fetchOnScroll",
        "label": "Fetch on Scroll",
        "defaultValue": true
      },
      {
        "type": "boolean",
        "key": "autoRefresh",
        "label": "Auto Refresh",
        "defaultValue": false,
        "showInBar": true,
        "barIcon": "Stopwatch",
        "barStyle": "buttons",
        "barTitle": "Auto Refresh"
      },
      {
        "type": "number",
        "key": "autoRefreshRate",
        "label": "Refresh Every (s)",
        "min": 5,
        "defaultValue": 60,
        "dependsOn": "autoRefresh"
      },
      {
        "section": true,
        "name": "Table Settings",
        "collapsed": true,
        "settings": [
          {
            "type": "boolean",
            "key": "numberingColumn",
            "label": "Numbering",
            "showInBar": true,
            "barStyle": "buttons",
            "barIcon": "123",
            "barTitle": "Numbering",
            "defaultValue": false
          },
          {
            "type": "boolean",
            "key": "canDelete",
            "label": "Delete Row",
            "showInBar": true,
            "barStyle": "buttons",
            "barIcon": "Delete",
            "barTitle": "Delete Row",
            "defaultValue": false
          },
          {
            "type": "boolean",
            "key": "canSelect",
            "label": "Select Rows",
            "showInBar": true,
            "barStyle": "buttons",
            "barIcon": "SelectBox",
            "barTitle": "Select Rows",
            "defaultValue": true
          },
          {
            "type": "select",
            "key": "canFilter",
            "label": "Filter Rows",
            "showInBar": true,
            "barStyle": "buttons",
            "barTitle": "Filtering",
            "options": [
              { "label": "Off", "value": false, "barIcon": "Close" },
              { "label": "Simple", "value": "simple", "barIcon": "Filter" },
              {
                "label": "Advanced",
                "value": "advanced",
                "barIcon": "FilterEdit"
              }
            ],
            "defaultValue": false
          },
          {
            "type": "boolean",
            "key": "canInsert",
            "label": "Add Row",
            "showInBar": true,
            "barStyle": "buttons",
            "barIcon": "Add",
            "barTitle": "Add Row",
            "defaultValue": false
          },
          {
            "type": "boolean",
            "key": "canEdit",
            "label": "Edit Row",
            "showInBar": true,
            "barStyle": "buttons",
            "barIcon": "Edit",
            "barTitle": "Edit Row",
            "defaultValue": false,
            "dependsOn": "isTable"
          }
        ]
      },
      {
        "section": true,
        "name": "Column Settings",
        "collapsed": true,
        "settings": [
          {
            "type": "boolean",
            "key": "beautifyLabels",
            "label": "Beautify Labels"
          },
          {
            "type": "text",
            "key": "columnLabelTemplate",
            "label": "Label Template",
            "placeholder": "{{ field }}"
          },
          {
            "type": "select",
            "key": "superColumnsPos",
            "label": "Super Columns",
            "showInBar": false,
            "barStyle": "buttons",
            "options": [
              { "label": "Off", "value": "off", "barIcon": "Close" },
              {
                "label": "First",
                "value": "first",
                "barIcon": "PaddingLeft",
                "barTitle": "Super Columns First"
              },
              {
                "label": "Last",
                "value": "last",
                "barIcon": "PaddingRight",
                "barTitle": "Super Columns Last"
              }
            ],
            "defaultValue": "first"
          },
          {
            "type": "boolean",
            "key": "stickFirstColumn",
            "label": "Pin 1st Column",
            "showInBar": false,
            "barStyle": "buttons",
            "barIcon": "PinOff",
            "barTitle": "Pin 1st Column",
            "defaultValue": false
          },
          {
            "type": "boolean",
            "key": "showHeader",
            "label": "Column Headers",
            "defaultValue": true
          },
          {
            "type": "boolean",
            "key": "showFooter",
            "label": "Column Footers",
            "defaultValue": false
          },
          {
            "type": "boolean",
            "key": "canResize",
            "label": "Resize Columns",
            "defaultValue": true
          },
          {
            "type": "boolean",
            "key": "selectionColumn",
            "label": "Selection Column",
            "dependsOn": "rowSelectMode",
            "resetOn": "rowSelectMode",
            "defaultValue": true
          }
        ]
      },
      {
        "section": true,
        "name": "Row Settings",
        "collapsed": true,
        "settings": [
          {
            "type": "select",
            "key": "rowMenu",
            "label": "Row Actions",
            "options": [
              { "label": "Disabled", "value": false },
              { "label": "Column - Left", "value": "columnLeft" },
              { "label": "Column - Right", "value": "columnRight" }
            ],
            "defaultValue": false
          },
          {
            "dependsOn": "rowMenu",
            "type": "icon",
            "defaultValue": "ri-more-fill",
            "key": "rowMenuIcon",
            "label": "Menu Icon"
          },
          {
            "dependsOn": "rowMenu",
            "type": "number",
            "key": "menuItemsVisible",
            "label": "Show Buttons",
            "min": 0,
            "max": 6,
            "defaultValue": 1
          },
          {
            "dependsOn": "rowMenu",
            "type": "buttonConfiguration",
            "key": "rowMenuItems",
            "label": "Row Actions",
            "max": 6,
            "nested": true,
            "wide": true
          },
          {
            "type": "buttonConfiguration",
            "key": "rowContextMenuItems",
            "label": "Row Context Menu",
            "nested": true,
            "wide": true
          }
        ]
      },
      {
        "section": true,
        "name": "Selection Settings",
        "collapsed": true,
        "dependsOn": "canSelect",
        "settings": [
          {
            "type": "boolean",
            "key": "hideSelectionColumn",
            "label": "Hide Checkboxes",
            "dependsOn": { "setting": "canEdit", "value": false },
            "resetOn": ["canEdit", "canSelect"]
          },
          {
            "type": "number",
            "key": "maxSelected",
            "label": "Limit",
            "min": 0,
            "defaultValue": 1
          },
          {
            "type": "text",
            "key": "preselectedIds",
            "label": "Selected IDs",
            "placeholder": "Comma Seperated Values"
          },
          {
            "type": "buttonConfiguration",
            "key": "selectedActions",
            "label": "Selection Actions",
            "max": 6,
            "nested": true,
            "wide": true
          }
        ]
      },
      {
        "tag": "style",
        "section": true,
        "name": "Appearance",
        "collapsed": false,
        "settings": [
          {
            "type": "select",
            "label": "Flex Mode",
            "showLabel": false,
            "key": "flex",
            "showInBar": true,
            "barStyle": "buttons",
            "options": [
              {
                "label": "Shrink",
                "value": "none",
                "barIcon": "Minimize",
                "barTitle": "Shrink container"
              },
              {
                "label": "Grow",
                "value": "auto",
                "barIcon": "Maximize",
                "barTitle": "Grow container"
              }
            ],
            "defaultValue": "none"
          },
          {
            "type": "text",
            "key": "entitySingular",
            "label": "Entity Singular",
            "placeholder": "Row",
            "resetOn": "datasource"
          },
          {
            "type": "text",
            "key": "entityPlural",
            "label": "Entity Plural",
            "placeholder": "Rows",
            "resetOn": "datasource"
          },
          {
            "type": "text",
            "key": "emptyMessage",
            "label": "Empty Message",
            "placeholder": "No Rows Found",
            "resetOn": "datasource"
          },
          {
            "type": "select",
            "key": "size",
            "label": "Size",
            "options": [
              { "label": "Small", "value": "S" },
              { "label": "Medium", "value": "M" },
              { "label": "Large", "value": "L" }
            ],
            "defaultValue": "M"
          },
          {
            "type": "select",
            "key": "columnSizing",
            "label": "Column Sizing",
            "options": [
              { "label": "Flexible", "value": "flexible" },
              { "label": "Fixed", "value": "fixed" }
            ],
            "defaultValue": "flexible"
          },
          {
            "type": "text",
            "key": "columnMinWidth",
            "label": "Min Width",
            "dependsOn": { "setting": "columnSizing", "value": "flexible" },
            "placeholder": "7rem"
          },
          {
            "type": "text",
            "key": "columnMaxWidth",
            "label": "Max Width",
            "dependsOn": { "setting": "columnSizing", "value": "flexible" },
            "placeholder": "auto"
          },
          {
            "type": "text",
            "key": "columnFixedWidth",
            "label": "Width",
            "placeholder": "7rem",
            "resetOn": "columnSizing",
            "dependsOn": { "setting": "columnSizing", "value": "fixed" }
          },
          {
            "type": "select",
            "key": "highlighters",
            "label": "Highlighters",
            "dependsOn": "canEdit",
            "options": [
              { "label": "None", "value": "none" },
              { "label": "Horizontal", "value": "horizontal" },
              { "label": "Vertical", "value": "vertical" },
              { "label": "Both", "value": "both" }
            ],
            "defaultValue": "horizontal"
          },
          {
            "type": "select",
            "key": "relViewMode",
            "label": "Relationships",
            "options": [
              { "label": "Pills", "value": "pills" },
              { "label": "Text", "value": "text" }
            ],
            "defaultValue": "text"
          },
          {
            "type": "select",
            "key": "optionsViewMode",
            "label": "Options",
            "options": [
              { "label": "Color Text", "value": "colorText" },
              { "label": "Pills", "value": "pills" },
              { "label": "Text", "value": "text" }
            ],
            "defaultValue": "colorText"
          },
          {
            "type": "boolean",
            "key": "zebraColors",
            "label": "Zebra Colors",
            "defaultValue": false
          },
          {
            "type": "boolean",
            "key": "quiet",
            "label": "Quiet",
            "defaultValue": false
          }
        ]
      },
      {
        "tag": "style",
        "section": true,
        "name": "Dynamic Row Colors",
        "settings": [
          {
            "type": "text",
            "key": "rowColorTemplate",
            "label": "Text",
            "nested": true
          },
          {
            "type": "text",
            "key": "rowBGColorTemplate",
            "label": "Background",
            "nested": true
          }
        ]
      },
      {
        "tag": "style",
        "section": true,
        "name": "Dividers Settings",
        "settings": [
          {
            "type": "select",
            "key": "dividers",
            "label": "Dividers",
            "options": [
              { "label": "None", "value": "none" },
              { "label": "Horizontal", "value": "horizontal" },
              { "label": "Vertical", "value": "vertical" },
              { "label": "Both", "value": "both" }
            ],
            "defaultValue": "horizontal"
          },
          {
            "type": "color",
            "key": "dividersColor",
            "label": "Dividers Color"
          }
        ]
      },
      {
        "section": true,
        "name": "Events",
        "collapsed": true,
        "settings": [
          {
            "type": "event",
            "label": "On Row Click",
            "key": "onRowClick",
            "nested": true
          },
          {
            "type": "event",
            "label": "On Cell Click",
            "key": "onCellClick",
            "nested": true,
            "context": [
              { "key": "column", "label": "column" },
              { "key": "id", "label": "id" },
              { "key": "value", "label": "value" }
            ]
          },
          {
            "type": "event",
            "label": "On Row Dbl Click",
            "key": "onRowDblClick",
            "nested": true
          },
          {
            "type": "event",
            "label": "On Row Select",
            "key": "onRowSelect",
            "nested": true,
            "dependsOn": {
              "setting": "rowSelectMode",
              "value": "off",
              "invert": true
            }
          },
          {
            "type": "event",
            "key": "onDelete",
            "label": "On Delete",
            "nested": true,
            "dependsOn": "canDelete"
          },
          {
            "type": "event",
            "key": "afterDelete",
            "label": "After Delete",
            "nested": true,
            "dependsOn": "canDelete"
          },
          {
            "type": "event",
            "key": "afterEdit",
            "label": "After Edit",
            "nested": true,
            "dependsOn": "canEdit"
          },
          {
            "type": "event",
            "key": "onInsert",
            "label": "On New Row",
            "nested": true,
            "dependsOn": "canInsert"
          },
          {
            "type": "event",
            "key": "afterInsert",
            "label": "After New Row",
            "nested": true,
            "dependsOn": "canInsert",
            "context": [
              {
                "label": "New Row",
                "key": "newRow"
              }
            ]
          }
        ]
      }
    ]
  }
}
